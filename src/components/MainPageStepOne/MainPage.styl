.main-page
  color #2DA0A6

  h4
    font-size 1.75em
    margin 0 0 20px 0

  .dropdown-toggle
    font-size 1.5em
    width 200px
    height 50px
    background-color #2DA0A6
    border-color transparent
    padding 0 0 14px 14px
    color #2DA0A6
    position relative
    padding 0 !important

  .dropdown-toggle:after
    border-top: .8rem solid
    border-right: .8rem solid transparent
    border-bottom: 0;
    border-left: .8rem solid transparent
    position absolute
    maring 0 !important
    top 0
    left 10px
    padding 0 !important
  
  .dropdown-menu
    width 200px
    
  .form-group
    margin-right 100px
    font-size 1.75em

  .form-control
    background-color #E5E5E5
    border-color transparent
    width 300px
    height 50px
    font-size 1.5em

    &::-webkit-input-placeholder
      font-size 1.5em
      color #9A9B9B

    &:-moz-placeholder
      font-size 1.5em
      color #9A9B9B

  .rc-time-picker-input
    border 0
    background-color #E5E5E5
    width 200px
    height 50px
    font-size 1em
    text-align right
    padding-right 1.5em
    color #2DA0A6
  
  .application
    background-color #fff
    margin 30px 0
    padding 30px
    display grid 
    grid-template-columns 37.5% 37.5% 25%
    grid-template-rows 33% 33% 33%
    grid-auto-flow column
    align-items center
    font-size 1.5em

    &__btn-next
      grid-row-start 3
      margin-top 70px

    &__block
      margin 32px 0 0 0

    &__input
      display flex

    &__icon
      margin-right 10px

      

