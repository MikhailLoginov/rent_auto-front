.car-card
  width 450px
  height 486px
  background-color white
  padding 5px
  margin 8px

  &__image
    width 440px
    height 293px
    object-fit cover

  &__title
    text-decoration underline
    font-weight 700

  &__text
    font-size 1.125rem

  &__row
    display flex
    justify-content space-between
    font-size 0.75rem
    width 60%

  &__button 
    width 175px !important
    font-size 1.375rem !important
    line-height inherit !important

  &__buttons
    display flex
    justify-content space-around
    margin 0 0 0 60px