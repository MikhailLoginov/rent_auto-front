.faq

  &__wrapper
    width 100%
    margin 30px auto
    padding 30px
    background-color white
    @media (max-width 990px)
      padding 12px
    @media (max-width 490px)
      padding 12px 3px

  &__question
    width 100% !important
    white-space inherit
    text-align left
    margin 10px 0
    @media (max-width: 990px)
      margin-bottom 0
      height 80px !important
    @media (max-width: 490px)
      font-size 1.25rem !important

  &__text
    display flex
    flex-direction column

    .btn 
      background-color transparent
      color #9A9B9B
      font-size 1.5rem

      &:hover
        background-color transparent

      &:active
        background-color transparent
        box-shadow none

      &:focus
        background-color transparent
        box-shadow none

      &:not(:disabled):not(.disabled):active
        background-color transparent
        border none
        box-shadow none

  &__buttons
    display flex
    width 100%
    justify-content flex-end
  
  &__button
    margin 10px 20px 0 20px

    &:last-child
      margin-right 0

  .card
    border none
    